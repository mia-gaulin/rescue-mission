<h1><u><%= @question.title %></u></h1>

<h3><%= @question.description %></h3>

<%= link_to 'Edit question', edit_question_path(@question) %><br /><br>
<%= button_to "Delete question", question_path(@question), method: :delete %>

<h4>Answers:</h4>

<% @answers.each do |answer| %>
<li><%= answer.description %></li>
<% end %><br />

<%= link_to 'Post an answer to this question', new_question_answer_path(@question) %>
