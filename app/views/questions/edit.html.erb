<h1>Edit question</h1>

<%= form_for(@question) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div><br />

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div><br />

  <div class="field">
    <%= f.submit "Update question" %>
  </div>

<% end %>

<%= button_to "Delete question", question_path(@question), method: :delete %>
